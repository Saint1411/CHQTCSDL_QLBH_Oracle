@model CHQTCSDL_QLBH.Models.CTPN

@{
    ViewBag.Title = "Xóa chi tiết phiếu nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Chi Tiết Phiếu Nhập</h2>

<h3>Bạn có chắc chắn muốn xóa chi tiết phiếu nhập này?</h3>
@if (TempData["Failed"] != null)
{
    <div class="alert alert-danger">@TempData["Failed"]</div>
}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã phiếu nhập:
        </dt>

        <dd style="color:red">
            @Html.DisplayFor(model => model.MAPN)
        </dd>

        <dt>
            Sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SANPHAM.TENSP)
        </dd>

        <dt>
            Số lượng nhập:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SLNHAP)
        </dd>

        <dt>
            Đơn giá nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DONGIANHAP)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            <span><a class="btn btn-default" href="~/ChiTietPhieuNhap/DanhSachCTPN?MAPN=@Model.MAPN">Quay về</a></span>
        </div>
    }
</div>
