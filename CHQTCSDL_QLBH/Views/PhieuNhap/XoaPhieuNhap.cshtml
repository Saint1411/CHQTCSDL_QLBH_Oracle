@model CHQTCSDL_QLBH.Models.PHIEUNHAP

@{
    ViewBag.Title = "Xóa phiếu nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Phiếu Nhập: <span style="color:red">@Model.MAPN</span></h2>
<h3>Bạn có chắc chắn muốn xóa phiếu nhập này?</h3>
@if (TempData["Failed"] != null)
{
    <div class="alert alert-danger">@TempData["Failed"]</div>
}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NGAYNHAP)
        </dd>

        <dt>
            Nhà cung cấp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHACUNGCAP.TENNCC)
        </dd>

        <dt>
            Nhân viên tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHANVIEN.HOTEN)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay về", "DanhSachPhieuNhap", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
