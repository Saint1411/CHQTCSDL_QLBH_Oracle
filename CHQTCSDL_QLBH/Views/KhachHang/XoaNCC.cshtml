@model CHQTCSDL_QLBH.Models.NHACUNGCAP

@{
    ViewBag.Title = "Xóa nhà cung cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Nhà Cung Cấp</h2>
@if (TempData["Failed"] != null)
{
    <div class="alert alert-danger">@TempData["Failed"]</div>
}
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã nhà cung cấp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MANCC)
        </dd>
        <dt>
            Tên nhà cung cấp:
        </dt>

        <dd>
            @Html.DisplayNameFor(model => model.TENNCC)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIACHI)
        </dd>

        <dt>
            Số điện thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
            Quốc gia:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QUOCGIA)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay về", "DanhSachNCC")
        </div>
    }
</div>
