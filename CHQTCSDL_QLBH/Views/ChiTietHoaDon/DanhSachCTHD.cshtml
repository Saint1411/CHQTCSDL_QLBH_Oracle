@model IEnumerable<CHQTCSDL_QLBH.Models.CTHD>

@{
    ViewBag.Title = "Chi tiết hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết hóa đơn: <span style="color:red">@ViewBag.HoaDon</span></h2>
<p>
    <a class="btn btn-warning" href="@Url.Action("ThemCTHD", "ChiTietHoaDon", new { SOHD = ViewBag.HoaDon })">Thêm mới</a>
</p>
<table class="table">
    <tr>
        <th>
            Số hóa đơn
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>Khách hàng</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SOHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SANPHAM.TENSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SOLUONG)
            </td>
            <td>
                @item.DONGIA.Value.ToString("#,##0") ₫
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HOADON.KHACHHANG.HOTEN)
            </td>
            <td>
                @Html.ActionLink("Sửa", "CapNhatCTHD", new { SOHD = item.SOHD, MASP = item.MASP }) |
                @Html.ActionLink("Xóa", "XoaCTHD", new { SOHD = item.SOHD, MASP = item.MASP })
            </td>
        </tr>
    }

</table>
<a href="~/HoaDon/DanhSachHoaDon" class="btn btn-primary">Quay về</a>
